<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherApp"
        tools:targetApi="31">
        <activity
            android:name=".notifications.Notification"
            android:exported="false"
            android:label="@string/title_activity_notification"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".map.Map"
            android:exported="false"
            android:label="@string/title_activity_map"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".favorite.Favourit"
            android:exported="false"
            android:label="@string/title_activity_favourit"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".MainActivity2"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".weatherScreen.WeatherDetailsViewModel"
            android:exported="false"
            android:label="@string/title_activity_weather_details_view_model"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".weatherScreen.WeatherDetails"
            android:exported="false"
            android:label="@string/title_activity_weather_details"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".weatherDetails.WeatherDetails"
            android:exported="false"
            android:label="@string/title_activity_weather_details"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WeatherApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>